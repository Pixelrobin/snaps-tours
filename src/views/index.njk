{% extends "./deps/_template.njk" %}

{% block head %}
	<script type="text/javascript" src="./scripts/index.js"></script>
{% endblock %}

{% block header %}
	<header>
		<a href="{{ root }}/index.html"><div id="home-nav-container"></a>
			<nav id="main-nav">
				<div class="home-logo-circle"></div>
				<ul>
					<li><a href="#">About</a></li>
					<li><a href="#">Tours</a></li>
					<li><a href="#">Pricing</a></li>
					<li><a href="{{ root }}/pages/test.html">Test</a></li>
				</ul>
			</nav>
		</div>

		<div style="width: 100%;">
			<div id="glide" class="glide">
				<div class="glide__track" data-glide-el="track">
					<ul class="glide__slides">
						{% for id, tour in tours %}
							<li class="glide__slide" style="background-image: url({{ root }}/{{ tour.image }}-small.jpg);">
								<a href="{{ root }}/pages/tours/{{ tour.id }}.html">
									<div class="glide__slide__mouse-catcher">
										<div class="glide__slide__content">
											<h1>{{ tour.name }}</h1>
											<p>Learn more</p>
										</div>
									</div>
								</a>
							</li>
						{% else %}
							<li class="glide__slide" style="background: red; color: white;">
								<div class="glide__slide__content">
									<h1>NO TOURS FOUND</h1>
									<a href="#">Panic!!</a>
								</div>
							</li>
						{% endfor %}
					</ul>
				</div>
			</div>
		</div>
	</header>
{% endblock %}

{% block body %}
	<div class="page">	
		<h1 class="text-centered big-text mb-2">The Ultimate Escape.</h1>
		
		<p class="block-centered mb-2">Over two million people have experienced other countries, learned other languages or participated in intercultural exchanges with Snaps! Our global network of suppliers, coupled with the largest volume of travelers in the industry, gives us the power to negotiate the best rates on flights, hotels, meals, and transportation—savings we pass along to you!</p>

		<img class="block-left rounded clip-bottom" src="https://source.unsplash.com/800x400/?travel&aa"></img>
		
		<div class="block-right home-card inverted clip-bottom">
			<h1>Putting YOU First.</h1>
			<p>Our quality control staff travels year-round—inspecting hotels, evaluating tour directors, visiting sights—to ensure our exacting quality standards. No one else offers these prices for this level of quality.</p>
		</div>
		
		<img class="block-centered rounded clip-bottom" src="https://source.unsplash.com/800x400/?travel&ab"></img>

		<div class="block-left home-card inverted">
			<h1>Everything You Expect.</h1>
				<ul>
					<li>Round-trip transportation from USA departure city</li>
					<li>Accommodations in three-and four-star hotels</li>
					<li>Continental breakfast and dinner daily</li>
					<li>All transfers and intercity transportation</li>
					<li>Guided city sightseeing tours</li>
					<li>Full-time services of multilingual WCT Tour Director</li>
				</ul>
		</div>

		<div class="text-centered mb-3 mt-3">
			<span class="h1 big-text">Prices starting at $1000</span>
			<a href="#" class="button">See our Tours</a>
		</div>
	</div>
{% endblock %}