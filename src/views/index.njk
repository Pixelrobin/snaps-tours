{% extends "./deps/template.njk" %}

{% block head %}
<script type="text/javascript" src="./scripts/index.js">
{% endblock %}

{% block body %}
	<header>
		<div id="nav-container">
			<nav id="main-nav">
				<div class="logo-circle"></div>
				<ul>
					<li><a href="#">About</a></li>
					<li><a href="#">Tours</a></li>
					<li><a href="#">Pricing</a></li>
				</ul>
			</nav>
		</div>

		<div style="width: 100%; z-index: 1;">
			<div id="glide" class="glide">
				<div class="glide__track" data-glide-el="track">
					<ul class="glide__slides">
						<li class="glide__slide" style="background-image: url(https://source.unsplash.com/600x400/?paris&a);">
							<div class="glide__slide__content">
								<h1>Grand Europe Tour</h1>
								<a href="#">Learn more</a>
							</div>
						</li>
						<li class="glide__slide" style="background-image: url(https://source.unsplash.com/600x400/?paris&b);">
							<div class="glide__slide__content">
								<h1>Some Other Tour</h1>
							</div>
						</li>
						<li class="glide__slide" style="background-image: url(https://source.unsplash.com/600x400/?paris&c);">
							<div class="glide__slide__content">
								<h1>Yet Another Tour</h1>
							</div>
						</li>
						<li class="glide__slide" style="background-image: url(https://source.unsplash.com/600x400/?paris&d);">
							<div class="glide__slide__content">
								<h1>Oh look! A tour!</h1>
							</div>
						</li>
						<li class="glide__slide" style="background-image: url(https://source.unsplash.com/600x400/?paris&e);">
							<div class="glide__slide__content">
								<h1>This is a tour</h1>
							</div>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</header>

	<div class="page">	
		<h1 class="text-centered big-text mb-3">The Ultimate Escape.</h1>
		
		<p class="block-centered mb-3">{{ paragraph1 }}</p>

		<img class="block-left rounded clip-bottom" src="https://source.unsplash.com/800x400/?travel&aa"></img>
		
		<div class="block-right home-card inverted clip-bottom">
			<h1>Putting YOU First.</h1>
			<p>{{ paragraph2 }}</p>
		</div>
		
		<img class="block-centered rounded clip-bottom" src="https://source.unsplash.com/800x400/?travel&ab"></img>

		<div class="block-left home-card inverted mb-6">
			<h1>Everything You Expect.</h1>
				<ul>
					<li>Round-trip transportation from USA departure city</li>
					<li>Accommodations in three-and four-star hotels</li>
					<li>Continental breakfast and dinner daily</li>
					<li>All transfers and intercity transportation</li>
					<li>Guided city sightseeing tours</li>
					<li>Full-time services of multilingual WCT Tour Director</li>
				</ul>
		</div>

		<div class="text-centered mb-6">
			<span class="h1 big-text">Prices starting at $1000</span>
			<a href="#" class="button">See our Tours</a>
		</div>
	</div>
{% endblock %}